{
  "name": "preset-api",
  "version": "0.0.1",
  "private": true,
  "licence": "",
  "scripts": {
    "server": "node -r dotenv/config src/index.js",
    "start": "nodemon -e js,graphql -x node -r dotenv/config src/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config src/index.js",
    "playground": "prisma playground",
    "dev": "npm-run-all --parallel start playground",
    "prisma": "prisma"
  },
  "dependencies": {
    "apollo-upload-server": "^5.0.0",
    "app-module-path": "^2.2.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "5.0.1",
    "empty": "^0.10.1",
    "graphql": "^0.13.2",
    "graphql-directive": "0.2.1",
    "graphql-import": "0.5.0",
    "graphql-scalar-types": "^1.1.0",
    "graphql-tools": "^2.24.0",
    "graphql-type-json": "0.2.1",
    "graphql-yoga": "^1.8.5",
    "jsonwebtoken": "8.2.1",
    "lodash.keyby": "^4.6.0",
    "mkdirp": "^0.5.1",
    "pluralize": "^7.0.0",
    "prisma-binding": "1.5.17",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-import": "^2.11.0",
    "graphql-cli": "2.15.9",
    "nodemon": "1.15.1",
    "npm-run-all": "4.1.2",
    "prisma": "^1.6.0"
  },
  "resolutions": {
    "graphql": "0.13.2"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "semi": 0,
      "strict": 0,
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "no-unused-vars": 2,
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ]
    }
  },
  "eslintIgnore": [
    "src/generated/*"
  ]
}
